@model EPolis.Models.MOKUPASI

@{
    ViewData["Title"] = "Edit";
}

<center><h2>Ubah Data Okupasi</h2></center>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" autocomplete="off" class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group col-lg-12">
                <label asp-for="KODEOKUPASI" class="control-label col-lg-4"></label>
                <input asp-for="KODEOKUPASI" class="col-lg-8" />
                <span asp-validation-for="KODEOKUPASI" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-12">
                <label asp-for="NAMAOKUPASI" class="control-label col-lg-4"></label>
                <input asp-for="NAMAOKUPASI" class="col-lg-8" />
                <span asp-validation-for="NAMAOKUPASI" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-12">
                <label asp-for="RATESTANDAR" class="control-label col-lg-4"></label>
                <input asp-for="RATESTANDAR" class="col-lg-8" />
                <span asp-validation-for="RATESTANDAR" class="text-danger" data-valmsg-for="RATESTANDAR" data-valmsg-replace="true"></span>
            </div>
            <div class="form-group col-lg-12">
                <label asp-for="STDKELAS1" class="control-label col-lg-4"></label>
                <input asp-for="STDKELAS1"  class="col-lg-8" />
                <span asp-validation-for="STDKELAS1" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-12">
                <label asp-for="STDKELAS2" class="control-label col-lg-4"></label>
                <input asp-for="STDKELAS2" class="col-lg-8" />
                <span asp-validation-for="STDKELAS2" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-12">
                <label asp-for="RESIKOID" class="control-label col-lg-4"></label>
                @Html.DropDownListFor(model => model.RESIKOID, new SelectList(ViewBag.DDLResiko, "ID", "RESIKO"), "Pilih Resiko", new { @class = "col-lg-8" })
                <span asp-validation-for="RESIKOID" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-12">
                <input type="submit" value="Simpan" class="btn btn-save pull-right" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Kembali</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
