@model EPolis.Models.MJENISASURANSI

@{
    ViewData["Title"] = "Edit";
}

<center><h2>Ubah Data Jenis Asuransi</h2></center>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" autocomplete="off" class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group col-lg-12">
                <label asp-for="KODEJENISASURANSI" class="control-label col-lg-4"></label>
                <input asp-for="KODEJENISASURANSI" class="col-lg-8" />
                <span asp-validation-for="KODEJENISASURANSI" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-12">
                <label asp-for="JENISASURANSI" class="control-label col-lg-4"></label>
                <input asp-for="JENISASURANSI" class="col-lg-8" />
                <span asp-validation-for="JENISASURANSI" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-12" hidden>
                <label asp-for="UPDATEDBY" class="control-label col-lg-4"></label>
                <input asp-for="UPDATEDBY" value="anis" class="col-lg-8" />
                <span asp-validation-for="UPDATEDBY" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-12" hidden>
                <label asp-for="UPDATEDDATE" class="control-label col-lg-4"></label>
                <input asp-for="UPDATEDDATE" value="@DateTime.Today" type="datetime" class="control-label col-lg-8" />
                <span asp-validation-for="UPDATEDDATE" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-12">
                <input type="submit" value="Simpan" class="btn btn-save pull-right" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Kembali</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
